<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center"
    android:clickable="false">
    <!-- List item layout for each row in the ListView -->
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/round_corner_white"
        android:paddingHorizontal="30px"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="250px"
            android:layout_weight="0.4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/carpark_image">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/column3_textview"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15sp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="ParkingLot"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Reserved"
                    android:textColor="@color/deep_blue"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/rounded_border"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:paddingTop="5px"
                    android:paddingBottom="5px">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time:">

                </TextView>
                <TextView
                    android:id="@+id/column1_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="startTime"
                    android:layout_marginLeft="10px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time:">

                </TextView>
                <TextView
                    android:id="@+id/column2_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:text="endTime"
                    android:layout_marginLeft="10px"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>