<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="0.2"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_marginTop="300px"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingLeft="200px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Name"

                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textStyle="bold"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Your Email"
                android:textStyle="bold"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Your Phone"
                android:textStyle="bold"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.8"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="top"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="20px"
                android:layout_marginTop="10px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-black"
                    android:lines="1"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:text="View reservation"
                    android:id="@+id/view_reservation"
                    android:clickable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="20px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-black"
                    android:lines="1"
                    android:textSize="32sp"
                    android:text="View Carpark"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:id="@+id/view_car_park"
                    android:clickable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="20px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-black"
                    android:lines="1"
                    android:textSize="32sp"
                    android:text="Current Reservation"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:id="@+id/current_reservation"
                    android:clickable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.12"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="20px"
                android:layout_marginTop="10px">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-black"
                    android:lines="1"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:text="Logout"
                    android:id="@+id/logout"
                    android:clickable="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>